<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <style>
    .one_half{
      margin : 0 0 0 40%;
    }

    body input, button{
      color : #FFFFFF;
      border-color : transparent;
      background-color: #829DA2;
      display : block;
      widows: 100%;
      padding: 12px;
      border : 1px solid;
    }

  </style>

  <body>
    <div class="bgded overlay" style="background-image:url('images/lighthouse.jpg');">
      <%- include('../partials/nav') %>
      <div id="pageintro" class="wrapper clear">
        <div class="one_half">
          <h6 class="heading">회원가입</h6>
            <form id="login-form" action="/auth" method="post">
              <fieldset>
                <label for="email">Username</label>
                <input class="btmspace-15" type="name" name="username" value placeholder="username" required autofocus>

                <label for="email">E-Mail</label>
                <input class="btmspace-15" type="email" name="email" value placeholder="email" required>
      
                <label for="password">Password</label>
                <input class="btmspace-15" type="password" name="password" value placeholder="password">
                
                <button id="regist" type="submit" class="btn">Regist</button>
                
                <footer>
                <a href="/auth/kakao" class="btn">KakaoTalk Registration</a>
                <br>
                <a href="/auth/naver" class="btn">Naver Registration</a>
                </footer>
              </fieldset>
            </form>
        </div>
      </div>
    </div>
  
        <%- include('../partials/foot') %>
   
        <%- include('../partials/copyright') %>
  
        <%- include('../partials/top') %>
